<form {{on "submit" this.saveBook}}>
  <div class="field">
    <label>Title:</label>
    <Input @type="text" placeholder="Title" @value={{this.title}} />
  </div>

  <div class="field">
    <label>ISBN:</label>
    <Input @type="text" placeholder="ISBN" @value={{this.isbn}} />
  </div>

  <div class="field">
    <label>Publish Date:</label>
    <Input @type="date" placeholder="Publish Date" @value={{this.publishDate}} />
  </div>

  <div class="field">
    <label>Author:</label>
    <p class="control">
      <PowerSelect @searchEnabled={{true}} @onChange={{fn (mut this.author)}} @selected={{this.author}} @search={{action "searchAuthor"}} as |author|>
        {{author.lastName}} {{author.firstName}}
      </PowerSelect>
    </p>
  </div>

  <div class="field">
    <label>Don't see Your author?</label>
    <NewAuthorModal @onSave={{fn (mut this.author)}} />
  </div>
  <div class="form-footer">
    <button type="submit" class="btn-submit">save</button>
  </div>
</form>